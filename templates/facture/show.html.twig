            </tr>
        </tbody>
    </table>

    <a href="{{ path('facture_index') }}">retour vers liste</a>

    <a href="{{ path('facture_edit', {'id': facture.id}) }}">modifier</a>

    {{ include('facture/_delete_form.html.twig') }}
