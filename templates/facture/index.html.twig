{% extends 'agent.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block main %}
    <h1>Facture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date De Facture</th>
                <th>Montant</th>
                <th>Payèe</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.dateDeFacture ? facture.dateDeFacture|date('Y-m-d') : '' }}</td>
                <td>{{ facture.montant }}</td>
                <td>{{ facture.payee ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('facture_show', {'id': facture.id}) }}">afficher</a>
                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('facture_edit', {'id': facture.id}) }}">modifier</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">rien à afficher</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('facture_new') }}">Ajouter</a>
{% endblock %}
